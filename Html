  <script>
    // Copie le lien d'invitation
    document.getElementById('copy').addEventListener('click', async function(){
      const link = document.getElementById('discordLink').href;
      try {
        await navigator.clipboard.writeText(link);
        const prev = this.textContent;
        this.textContent = 'Lien copi√© ‚úÖ';
        setTimeout(()=> this.textContent = prev, 1800);
      } catch(e){
        this.textContent = 'Impossible de copier';
        setTimeout(()=> this.textContent = 'üìã Copier le lien', 1800);
      }
    });

    // met l'ann√©e
    document.getElementById('year').textContent = new Date().getFullYear();
